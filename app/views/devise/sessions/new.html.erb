<h2 class="content-center">Sign in</h2>
<div class="ink-form content-center">
  

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {  class: 'top-space control-group column-group gutters' }) do |f| %>

    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Sign in", class: 'ink-button green' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
