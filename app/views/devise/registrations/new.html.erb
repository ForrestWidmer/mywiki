<h2 class="content-center">Sign up!</h2>
<div class="ink-grid">
  <div class="ink-form content-center">
  
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'top-space control-group column-group gutters' }) do |f| %>
        <%= devise_error_messages! %>

      <div class="control-group"><%= f.label :username %><br />
          <%= f.text_field :username %>
      </div>

      <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Sign up", class: 'ink-button green' %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">

      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
